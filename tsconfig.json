{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "useDefineForClassFields": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "noImplicitAny": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "baseUrl": "./",
    "paths": {
      "@viewfly/platform-browser": [
        "./packages/platform-browser/src/public-api.ts"
      ],
      "@viewfly/core/jsx-runtime": [
        "./packages/core/jsx-runtime"
      ],
      "@viewfly/core": [
        "./packages/core/src/public-api.ts"
      ],
      "@viewfly/scoped-css": [
        "./packages/scoped-css/src/public-api.ts"
      ],
      "@viewfly/hooks": [
        "./packages/hooks/src/public-api.ts"
      ],
      "@viewfly/router": [
        "./packages/router/src/public-api.ts"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@viewfly/core"
  },
  "exclude": ["packages/cli", "packages/**/bundles"]
}
