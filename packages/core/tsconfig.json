{
  "compilerOptions": {
    "declaration": true,
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "es6",
    "strict": true,
    "module": "es2020",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "outDir": "bundles/",
    "downlevelIteration": true,
    "paths": {
      "@viewfly/core": [
        "./src/public-api.ts"
      ],
      "@viewfly/core/jsx-runtime": [
        "./src/public-api.ts"
      ]
    }
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
